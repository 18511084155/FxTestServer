<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.paint.Color?>
<HBox fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
	  xmlns="http://javafx.com/javafx/2.2" fx:controller="quant.test.server.controller.DeviceItemController" alignment="CENTER">
	<children >

		<ImageView fx:id="imageView" fitWidth="36" fitHeight="36" >
			<HBox.margin>
				<Insets left="8" right="8"/>
			</HBox.margin>
			<Image  url="@/image/ic_settings_input_hdmi.png"  />
		</ImageView>

		<VBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
			<Label fx:id="deviceName" text="mx5" styleClass="item-label" />

			<Label fx:id="socketStatus"  text="192.168.1.20 0:5555" styleClass="item-label" >
				<VBox.margin>
					<Insets top="4" bottom="4"/>
				</VBox.margin>
			</Label>
		</VBox>

		<Circle fx:id="runStatus"  radius="12" >
			<HBox.margin>
				<Insets left="8" right="8"/>
			</HBox.margin>
			<fill>
				<Color red="1.0" green="0.1" blue="0.1" />
			</fill>
		</Circle>

	</children>
</HBox>